"\n"
"/* Set up a function that uses the quote function */\n"
"\n"
"CREATE OR REPLACE FUNCTION use_quote(TEXT) RETURNS text AS $$\n"
"    my $text_to_quote = shift;\n"
"    my $qfunc = $_SHARED{myquote};\n"
"    return &amp;$qfunc($text_to_quote);\n"
"$$ LANGUAGE plperl;"
msgstr ""
