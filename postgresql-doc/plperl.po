"CREATE OR REPLACE FUNCTION perlsnitch() RETURNS event_trigger AS $$\n"
"  elog(NOTICE, \"perlsnitch: \" . $_TD-&gt;{event} . \" \" . $_TD-&gt;{tag} . \" \");\n"
"$$ LANGUAGE plperl;\n"
"\n"
"CREATE EVENT TRIGGER perl_a_snitch\n"
"    ON ddl_command_start\n"
"    EXECUTE PROCEDURE perlsnitch();"
msgstr ""
