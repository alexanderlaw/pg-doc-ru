"SELECT * FROM perl_row();"
msgstr ""
"CREATE TYPE testrowperl AS (f1 integer, f2 text, f3 text);\n"
"\n"
"CREATE OR REPLACE FUNCTION perl_row() RETURNS testrowperl AS $$\n"
"    return {f2 =&gt; 'hello', f1 =&gt; 1, f3 =&gt; 'world'};\n"
"$$ LANGUAGE plperl;\n"
"\n"
"SELECT * FROM perl_row();"

